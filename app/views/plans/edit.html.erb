<div class="text-center">
  <h1>予定編集</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @plan, local: true) do |f| %>
       <%= render 'layouts/error_messages', model: f.object %>
      
      <div class="form-group form-inline">
        <%= f.label :start_time, '予定日' %>
        <%= f.date_field :start_time, class: 'form-control' %>
      </div>
      <div class="form-group form-inline  text-left">
        <%= f.label :plan_at, '開始時間' %>
        <%= f.time_field :plan_at, class: 'form-control' %>
        &nbsp;
        <%= f.label :plan_until, ' 終了時間' %>
        <%= f.time_field :plan_until, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :title, 'タイトル' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :content, '内容' %>
        <%= f.text_field :content, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :add_title, '活動場所' %>
        <%= f.text_field :add_title, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :address, '住所' %>
        <%= f.text_field :address, class: 'form-control' %>
      </div>

      <%= f.hidden_field :user_id, value: current_user.id %>
      <%= f.hidden_field :mygroup_id, value: @plan.mygroup_id %>
      <%= f.submit '登録する', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>