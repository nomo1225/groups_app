<div class="text-center">
  <h1>グループ編集</h1>
  <%= link_to 'グループを削除する', @mygroup, method: :delete, data: { confirm: '本当に削除しますか？' } %>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @mygroup, local: true) do |f| %>
       <%= render 'layouts/error_messages', model: f.object %>

      <div class="form-group">
        <%= f.label :name, 'グループ名' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :area, '地域' %>
        <%= f.select :area, Mygroup.areas.keys, {}, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :category, 'カテゴリー' %>
        <%= f.text_field :category, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :image, 'アイコン画像' %>
        <%= f.file_field :image, class: 'form-control' %>
      </div>
      
      <%= f.hidden_field :user_id, value: current_user.id %>
      <%= f.submit '登録する', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>