<header class="mb-4">
  <nav class="navbar navbar-expand navbar-light" style="height:50px;">
    <a class="navbar-brand" href="/"><img src="/logo1.png" width=100 alt="Groupsロゴ"></a>
      <div class="collapse navbar-collapse justify-content-end">
        <ul class="navbar-nav">
          <% if logged_in? %>
            <li class="nav-item  m-2">
              <%= link_to logout_path, method: :delete, class: 'btn btn-outline-light' do %>
                <i class="fas fa-door-closed"></i>ログアウト
              <% end %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to signup_path, class: 'btn btn-outline-light mr-1' do %>
                <i class="far fa-file-alt"></i>新規登録
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to login_path, class: 'btn btn-outline-light' do %>
                <i class="fas fa-door-open"></i>ログイン
              <% end %>
            </li>
            
          <% end %>
        </ul>
      </div>
  </nav>
</header>


          